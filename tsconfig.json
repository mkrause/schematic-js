{
    "compilerOptions": {
        "outFile": "./build",
        "target": "es6",
        "module": "system",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ],
    "include": [
        "src/**/*"
    ],
}
