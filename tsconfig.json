{
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ],
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "outFile": "./build",
        "target": "es2017",
        "module": "system",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "noErrorTruncation": false,
    },
}
